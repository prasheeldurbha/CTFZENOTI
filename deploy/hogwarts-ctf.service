[Unit]
Description=Hogwarts CTF Web Application
After=network.target

[Service]
Type=simple
User=ctfuser
WorkingDirectory=/opt/hogwarts_ctf
Environment="PATH=/opt/hogwarts_ctf/venv/bin"
ExecStart=/opt/hogwarts_ctf/venv/bin/python /opt/hogwarts_ctf/app.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target

